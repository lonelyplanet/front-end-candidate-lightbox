{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015"
    ],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "strict": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "pretty": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "~*": ["src/*"]
    }
  },
  "include": [
    "./src",
    "./types"
  ]
}
