{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true,
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
    },
    "plugins": [
        "react"
    ],
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4]
    }
}
